{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "southeastasia"
    },
    "featureFlags": {
      "value": {
        "enablePrivateEndpoints": true,
        "enableVNetIntegration": true,
        "enableApplicationGateway": true,
        "enableApiManagement": true,
        "enableTestVM": true,
        "enableSqlServer": true,
        "enableKeyVault": true,
        "enableAppConfiguration": true,
        "enableBlobStorage": true,
        "enableCosmosDb": true,
        "enableFunctionApps": true,
        "enableServiceBus": true,
        "enableApplicationInsights": true
      }
    },
    "networking": {
      "value": {
        "vnetName": "practicalpe-vnet-test"
      }
    },
    "applicationGateway": {
      "value": {
        "enableWAF": true,
        "wafMode": "Detection",
        "wafRuleSetVersion": "3.2",
        "wafRequestBodyCheck": true,
        "wafMaxRequestBodySizeInKb": 128,
        "wafFileUploadLimitInMb": 100
      }
    },
    "sqlServer": {
      "value": {
        "serverName": "practicalpe-sql-test",
        "adminUsername": "sqladmin",
        "databases": {
          "customerDbName": "practicalpe-CUSTOMER-DB",
          "adminDbName": "practicalpe-ADMIN-DB",
          "videoDbName": "practicalpe-VIDEO-DB",
          "musicDbName": "practicalpe-MUSIC-DB"
        }
      }
    },
    "cosmosDb": {
      "value": {
        "accountName": "practicalpe-cosmos-test",
        "consistencyLevel": "Session",
        "enableAutomaticFailover": true,
        "databases": {
          "adminDbName": "PracticalPE-ADMIN-COSMOS-DB-TEST",
          "customerDbName": "PracticalPE-CUSTOMER-COSMOS-DB-TEST",
          "musicDbName": "PracticalPE-MUSIC-COSMOS-DB-TEST",
          "videoDbName": "PracticalPE-VIDEO-COSMOS-DB-TEST"
        }
      }
    },
    "storage": {
      "value": {
        "accountName": "practicalpetstblob",
        "functionAppsAccountName": "practicalpetstfunc",
        "accountType": "Standard_GRS",
        "blobContainerNames": [
          "documents",
          "images",
          "backups",
          "logs",
          "test-data"
        ]
      }
    },
    "keyVault": {
      "value": {
        "name": "practicalpe-kv-test"
      }
    },
    "appConfiguration": {
      "value": {
        "name": "practicalpe-config-test"
      }
    },
    "appService": {
      "value": {
        "planName": "practicalpe-asp-test",
        "webApps": {
          "customerPublicWebAppName": "practicalpe-customer-public",
          "customerSiteWebAppName": "practicalpe-customer-site",
          "adminPublicWebAppName": "practicalpe-admin-public",
          "adminSiteWebAppName": "practicalpe-admin-site",
          "videoApiWebAppName": "practicalpe-video-api",
          "musicApiWebAppName": "practicalpe-music-api"
        }
      }
    },
    "azureFunctions": {
      "value": {
        "adminFunctionAppName": "practicalpe-admin-func-test",
        "customerFunctionAppName": "practicalpe-customer-func-test",
        "musicFunctionAppName": "practicalpe-music-func-test",
        "videoFunctionAppName": "practicalpe-video-func-test"
      }
    },
    "apiManagement": {
      "value": {
        "name": "practicalpe-apim",
        "sku": "Standard",
        "capacity": 1,
        "publisherEmail": "test@practical.devsecops",
        "publisherName": "Practical DevSecOps Test Team"
      }
    },
    "monitoring": {
      "value": {
        "workspaceName": "practicalpe-law-test",
        "retentionInDays": 60
      }
    },
    "serviceBus": {
      "value": {
        "namespaceName": "practicalpe-sb-test",
        "sku": "Standard",
        "capacity": 1,
        "topicNames": [
          "customer-events",
          "admin-events",
          "video-events",
          "music-events"
        ],
        "queueNames": [
          "customer-queue",
          "admin-queue",
          "video-queue",
          "music-queue"
        ],
        "subscriptions": [
          {
            "topicName": "customer-events",
            "subscriptionName": "customer-subscription"
          },
          {
            "topicName": "admin-events",
            "subscriptionName": "admin-subscription"
          },
          {
            "topicName": "video-events",
            "subscriptionName": "video-subscription"
          },
          {
            "topicName": "music-events",
            "subscriptionName": "music-subscription"
          }
        ]
      }
    },
    "virtualMachine": {
      "value": {
        "adminUsername": "testadmin"
      }
    }
  }
}
