{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "southeastasia"
    },
    "featureFlags": {
      "value": {
        "enablePrivateEndpoints": true,
        "enableVNetIntegration": true,
        "enableApplicationGateway": true,
        "enableApiManagement": true,
        "enableTestVM": false,
        "enableSqlServer": true,
        "enableKeyVault": true,
        "enableAppConfiguration": true,
        "enableBlobStorage": true,
        "enableCosmosDb": true,
        "enableFunctionApps": true,
        "enableServiceBus": true,
        "enableApplicationInsights": true
      }
    },
    "networking": {
      "value": {
        "vnetName": "practicalpe-vnet-uat"
      }
    },
    "applicationGateway": {
      "value": {
        "enableWAF": true,
        "wafMode": "Prevention",
        "wafRuleSetVersion": "3.2",
        "wafRequestBodyCheck": true,
        "wafMaxRequestBodySizeInKb": 256,
        "wafFileUploadLimitInMb": 200
      }
    },
    "sqlServer": {
      "value": {
        "serverName": "practicalpe-sql-uat",
        "adminUsername": "sqladmin",
        "databases": {
          "customerDbName": "practicalpe-CUSTOMER-DB-uat",
          "adminDbName": "practicalpe-ADMIN-DB-uat",
          "videoDbName": "practicalpe-VIDEO-DB-uat",
          "musicDbName": "practicalpe-MUSIC-DB-uat"
        }
      }
    },
    "cosmosDb": {
      "value": {
        "accountName": "practicalpe-cosmos-uat",
        "consistencyLevel": "Session",
        "enableAutomaticFailover": true,
        "enableAvailabilityZones": true,
        "databases": {
          "adminDbName": "practicalpe-ADMIN-COSMOS-DB-uat",
          "customerDbName": "practicalpe-CUSTOMER-COSMOS-DB-uat",
          "musicDbName": "practicalpe-MUSIC-COSMOS-DB-uat",
          "videoDbName": "practicalpe-VIDEO-COSMOS-DB-uat"
        }
      }
    },
    "storage": {
      "value": {
        "accountName": "practicalpeblobuat",
        "functionAppsAccountName": "practicalpefuncuat",
        "accountType": "Standard_GRS",
        "blobContainerNames": [
          "documents",
          "images",
          "backups",
          "logs"
        ]
      }
    },
    "keyVault": {
      "value": {
        "name": "practicalpe-kv-uat"
      }
    },
    "appConfiguration": {
      "value": {
        "name": "practicalpe-config-uat"
      }
    },
    "appService": {
      "value": {
        "planName": "practicalpe-asp-uat",
        "webApps": {
          "customerPublicWebAppName": "practicalpe-customer-public-uat",
          "customerSiteWebAppName": "practicalpe-customer-site-uat",
          "adminPublicWebAppName": "practicalpe-admin-public-uat",
          "adminSiteWebAppName": "practicalpe-admin-site-uat",
          "videoApiWebAppName": "practicalpe-video-api-uat",
          "musicApiWebAppName": "practicalpe-music-api-uat"
        }
      }
    },
    "azureFunctions": {
      "value": {
        "adminFunctionAppName": "practicalpe-admin-func-uat",
        "customerFunctionAppName": "practicalpe-customer-func-uat",
        "musicFunctionAppName": "practicalpe-music-func-uat",
        "videoFunctionAppName": "practicalpe-video-func-uat"
      }
    },
    "apiManagement": {
      "value": {
        "name": "practicalpe-apim-uat",
        "sku": "Standard",
        "capacity": 2,
        "publisherEmail": "uat@practical.devsecops",
        "publisherName": "Practical DevSecOps UAT Team"
      }
    },
    "monitoring": {
      "value": {
        "workspaceName": "practicalpe-law-uat",
        "retentionInDays": 90
      }
    },
    "serviceBus": {
      "value": {
        "namespaceName": "practicalpe-sb-uat",
        "sku": "Premium",
        "capacity": 1,
        "topicNames": [
          "customer-events",
          "admin-events",
          "video-events",
          "music-events"
        ],
        "queueNames": [
          "customer-queue",
          "admin-queue",
          "video-queue",
          "music-queue"
        ],
        "subscriptions": [
          {
            "topicName": "customer-events",
            "subscriptionName": "customer-subscription"
          },
          {
            "topicName": "admin-events",
            "subscriptionName": "admin-subscription"
          },
          {
            "topicName": "video-events",
            "subscriptionName": "video-subscription"
          },
          {
            "topicName": "music-events",
            "subscriptionName": "music-subscription"
          }
        ]
      }
    },
    "virtualMachine": {
      "value": {
        "adminUsername": "uatadmin"
      }
    }
  }
}
