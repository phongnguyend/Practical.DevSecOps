{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "value": "southeastasia"
    },
    "featureFlags": {
      "value": {
        "enablePrivateEndpoints": false,
        "enableVNetIntegration": true,
        "enableApplicationGateway": true,
        "enableApiManagement": false,
        "enableTestVM": true,
        "enableSqlServer": true,
        "enableKeyVault": true,
        "enableAppConfiguration": true,
        "enableBlobStorage": true,
        "enableCosmosDb": true,
        "enableFunctionApps": true,
        "enableServiceBus": false,
        "enableApplicationInsights": true
      }
    },
    "networking": {
      "value": {
        "vnetName": "practicalpe-vnet-dev"
      }
    },
    "applicationGateway": {
      "value": {
        "enableWAF": false,
        "wafMode": "Detection",
        "wafRuleSetVersion": "3.2",
        "wafRequestBodyCheck": true,
        "wafMaxRequestBodySizeInKb": 128,
        "wafFileUploadLimitInMb": 100
      }
    },
    "sqlServer": {
      "value": {
        "serverName": "practicalpe-sql-dev",
        "adminUsername": "sqladmin",
        "databases": {
          "customerDbName": "PracticalPE-CUSTOMER-DB-DEV",
          "adminDbName": "PracticalPE-ADMIN-DB-DEV",
          "videoDbName": "PracticalPE-VIDEO-DB-DEV",
          "musicDbName": "PracticalPE-MUSIC-DB-DEV"
        }
      }
    },
    "cosmosDb": {
      "value": {
        "accountName": "practicalpe-cosmos-dev",
        "consistencyLevel": "Session",
        "enableAutomaticFailover": false,
        "databases": {
          "adminDbName": "PracticalPE-ADMIN-COSMOS-DB-DEV",
          "customerDbName": "PracticalPE-CUSTOMER-COSMOS-DB-DEV",
          "musicDbName": "PracticalPE-MUSIC-COSMOS-DB-DEV",
          "videoDbName": "PracticalPE-VIDEO-COSMOS-DB-DEV"
        }
      }
    },
    "storage": {
      "value": {
        "accountName": "practicalpeblob1dev",
        "functionAppsAccountName": "practicalpefuncdev",
        "accountType": "Standard_LRS",
        "blobContainerNames": [
          "documents",
          "images",
          "backups",
          "logs",
          "dev-testing"
        ]
      }
    },
    "keyVault": {
      "value": {
        "name": "practicalpe-kv-dev"
      }
    },
    "appConfiguration": {
      "value": {
        "name": "practicalpe-config-dev"
      }
    },
    "appService": {
      "value": {
        "planName": "practicalpe-asp-dev",
        "webApps": {
          "customerPublicWebAppName": "practicalpe-customer-public-dev",
          "customerSiteWebAppName": "practicalpe-customer-site-dev",
          "adminPublicWebAppName": "practicalpe-admin-public-dev",
          "adminSiteWebAppName": "practicalpe-admin-site-dev",
          "videoApiWebAppName": "practicalpe-video-api-dev",
          "musicApiWebAppName": "practicalpe-music-api-dev"
        }
      }
    },
    "azureFunctions": {
      "value": {
        "adminFunctionAppName": "practicalpe-admin-func-dev",
        "customerFunctionAppName": "practicalpe-customer-func-dev",
        "musicFunctionAppName": "practicalpe-music-func-dev",
        "videoFunctionAppName": "practicalpe-video-func-dev"
      }
    },
    "apiManagement": {
      "value": {
        "name": "practicalpe-apim-dev",
        "sku": "Developer",
        "capacity": 1,
        "publisherEmail": "dev@practical.devsecops",
        "publisherName": "Practical DevSecOps Dev Team"
      }
    },
    "monitoring": {
      "value": {
        "workspaceName": "practicalpe-law-dev",
        "retentionInDays": 30
      }
    },
    "serviceBus": {
      "value": {
        "namespaceName": "practicalpe-sb-dev",
        "sku": "Standard",
        "capacity": 1,
        "topicNames": [
          "customer-events",
          "admin-events",
          "video-events",
          "music-events",
          "dev-testing-events"
        ],
        "queueNames": [
          "customer-queue",
          "admin-queue",
          "video-queue",
          "music-queue",
          "dev-testing-queue"
        ],
        "subscriptions": [
          {
            "topicName": "customer-events",
            "subscriptionName": "customer-subscription"
          },
          {
            "topicName": "admin-events",
            "subscriptionName": "admin-subscription"
          },
          {
            "topicName": "video-events",
            "subscriptionName": "video-subscription"
          },
          {
            "topicName": "music-events",
            "subscriptionName": "music-subscription"
          },
          {
            "topicName": "dev-testing-events",
            "subscriptionName": "dev-testing-subscription"
          }
        ]
      }
    },
    "virtualMachine": {
      "value": {
        "adminUsername": "devadmin"
      }
    }
  }
}
