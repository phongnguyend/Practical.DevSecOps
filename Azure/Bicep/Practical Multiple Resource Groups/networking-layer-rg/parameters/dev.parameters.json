{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "general": {
      "value": {
        "location": "southeastasia"
      }
    },
    "featureFlags": {
      "value": {
        "enablePrivateEndpoints": false,
        "enableApplicationGateway": true,
        "enableApiManagement": false,
        "enableAppConfiguration": true,
        "enableBlobStorage": true,
        "enableCosmosDb": true,
        "enableServiceBus": false,
        "enableWAF": false
      }
    },
    "networking": {
      "value": {
        "vnetName": "practicalmrg-vnet-dev"
      }
    },
    "apiManagement": {
      "value": {
        "name": "practicalmrg-apim-dev",
        "publisherEmail": "dev@practical.devsecops",
        "publisherName": "Practical DevSecOps Dev Team",
        "sku": "Developer",
        "capacity": 1
      }
    },
    "webApps": {
      "value": {
        "apps": {
          "customerPublic": "practicalmrg-customer-public-dev",
          "customerSite": "practicalmrg-customer-site-dev",
          "adminPublic": "practicalmrg-admin-public-dev",
          "adminSite": "practicalmrg-admin-site-dev",
          "videoApi": "practicalmrg-video-api-dev",
          "musicApi": "practicalmrg-music-api-dev"
        }
      }
    },
    "applicationGateway": {
      "value": {
        "waf": {
          "mode": "Detection",
          "ruleSetVersion": "3.2",
          "requestBodyCheck": true,
          "maxRequestBodySizeInKb": 128,
          "fileUploadLimitInMb": 100
        }
      }
    }
  }
}
