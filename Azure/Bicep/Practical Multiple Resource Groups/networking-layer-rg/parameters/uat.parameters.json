{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "general": {
      "value": {
        "location": "southeastasia"
      }
    },
    "featureFlags": {
      "value": {
        "enablePrivateEndpoints": false,
        "enableApplicationGateway": true,
        "enableApiManagement": true,
        "enableAppConfiguration": true,
        "enableBlobStorage": true,
        "enableCosmosDb": true,
        "enableServiceBus": true,
        "enableWAF": true
      }
    },
    "networking": {
      "value": {
        "vnetName": "practicalmrg-vnet-uat"
      }
    },
    "apiManagement": {
      "value": {
        "name": "practicalmrg-apim-uat",
        "publisherEmail": "uat@practical.devsecops",
        "publisherName": "Practical DevSecOps UAT Team",
        "sku": "Standard",
        "capacity": 1
      }
    },
    "webApps": {
      "value": {
        "apps": {
          "customerPublic": "practicalmrg-customer-public-uat",
          "customerSite": "practicalmrg-customer-site-uat",
          "adminPublic": "practicalmrg-admin-public-uat",
          "adminSite": "practicalmrg-admin-site-uat",
          "videoApi": "practicalmrg-video-api-uat",
          "musicApi": "practicalmrg-music-api-uat"
        }
      }
    },
    "applicationGateway": {
      "value": {
        "waf": {
          "mode": "Detection",
          "ruleSetVersion": "3.2",
          "requestBodyCheck": true,
          "maxRequestBodySizeInKb": 128,
          "fileUploadLimitInMb": 100
        }
      }
    }
  }
}
